<Window x:Class="MarketPlace.View.Windows.AddImageWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketPlace.View.Windows"
        mc:Ignorable="d"
        Title="AddImageWin" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Name" Margin="5"/>
                <TextBlock Text="{Binding Name}" Margin="5"/>
            </StackPanel>
            <Image Width="150" Height="150" Source="{Binding Photo}" Name="ImageProf"/>
            <Button Content="Add" Name="AddBtn" Click="AddBtn_Click"/>
            <Button Content="Exit" Name="ExitBtn" Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
